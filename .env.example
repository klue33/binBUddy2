# .env.example - Copy this to a new file named .env and fill in the values.

# ------------------------------------
# Flask Application Configuration
# ------------------------------------
# A long, random string used for session security and CSRF protection.
SECRET_KEY=your_super_secret_and_long_random_string_here

# ------------------------------------
# Stripe API Configuration
# ------------------------------------
STRIPE_PUBLISHABLE_KEY=pk_test_..._your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_..._your_secret_key_here
STRIPE_PRICE_ID=price_..._your_price_id_here
STRIPE_WEBHOOK_SECRET=whsec_..._your_webhook_signing_secret_here

# ------------------------------------
# Google Cloud & Vertex AI Configuration
# ------------------------------------
GCP_PROJECT_ID=your-gcp-project-id-here
GCP_REGION=us-central1

# These values come from the output of the create_index.py script
VERTEX_AI_INDEX_ENDPOINT_ID=
VERTEX_AI_DEPLOYED_INDEX_ID=quicklist_deployed_index_v1
